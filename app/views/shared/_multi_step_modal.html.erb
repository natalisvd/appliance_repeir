
<!-- Modal Structure -->
<div id="multiStepModal" class="fixed inset-0 bg-[#001524] bg-opacity-90 flex items-center justify-center hidden z-50">
  <div class="bg-[#001524] p-8 rounded-lg max-w-lg w-full text-[#FFECD1] relative">
    <button class="absolute top-3 right-3 text-[#FF7D00] text-xl" onclick="closeMultiStepModal()">Ã—</button>

    <!-- Step 1: Appliance Details -->
    <div id="step-1" class="step">
      <h3 class="text-2xl font-bold mb-4 text-[#FF7D00]">Provide Appliance Details</h3>

      <label for="applianceType" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Appliance Type</label>
      <select id="applianceType" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded">
        <option value="">Select Appliance</option>
        <option value="washer">Washing Machine</option>
        <option value="dryer">Dryer</option>
        <option value="oven">Oven</option>
        <option value="microwave">Microwave</option>
      </select>

      <label for="manufacturer" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Manufacturer</label>
      <select id="manufacturer" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded">
        <option value="">Select Manufacturer</option>
        <option value="samsung">Samsung</option>
        <option value="lg">LG</option>
        <option value="whirlpool">Whirlpool</option>
        <option value="ge">GE</option>
      </select>

      <label for="model" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Model</label>
      <input type="text" id="model" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded" placeholder="Model Number">

      <label for="age" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Age</label>
      <input type="number" id="age" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded" placeholder="Age of Appliance (years)">

      <button class="bg-[#FF7D00] w-full py-2 rounded text-[#001524] font-bold" onclick="nextStep(2)">Next</button>
    </div>

    <!-- Step 2: Check Area and Enter Address -->
    <div id="step-2" class="step hidden">
      <h3 class="text-2xl font-bold mb-4 text-[#FF7D00]">Enter Your Location</h3>

      <label for="area" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Select Area</label>
      <select id="area" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded">
        <option value="">Choose Area</option>
        <option value="area1">Area 1</option>
        <option value="area2">Area 2</option>
        <option value="area3">Area 3</option>
      </select>

      <label for="address" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Address</label>
      <input type="text" id="address" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded" placeholder="Street Address">

      <button class="bg-[#FF7D00] w-full py-2 rounded text-[#001524] font-bold" onclick="nextStep(3)">Next</button>
    </div>

    <!-- Step 3: Additional Details -->
    <div id="step-3" class="step hidden">
      <h3 class="text-2xl font-bold mb-4 text-[#FF7D00]">Additional Details</h3>

      <label for="applianceProblem" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Describe the Problem</label>
      <textarea id="applianceProblem" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded" placeholder="Briefly describe the issue..."></textarea>

      <label for="preferredContactMethod" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Preferred Contact Method</label>
      <select id="preferredContactMethod" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded">
        <option value="">Select Method</option>
        <option value="phone">Phone</option>
        <option value="email">Email</option>
      </select>

      <label for="contactTime" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Best Time to Contact</label>
      <input type="text" id="contactTime" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded" placeholder="e.g., Morning, Afternoon, Evening">

      <label for="additionalNotes" class="block mb-2 text-sm font-semibold text-[#FFECD1]">Additional Notes</label>
      <textarea id="additionalNotes" class="w-full mb-4 p-2 bg-[#15616D] text-[#FFECD1] rounded" placeholder="Any special instructions..."></textarea>

      <button class="bg-[#FF7D00] w-full py-2 rounded text-[#001524] font-bold" onclick="nextStep(4)">Next</button>
    </div>

    <!-- Step 4: Schedule Date and Time -->
    <div id="step-4" class="step hidden">
      <h3 class="text-2xl font-bold mb-4 text-[#FF7D00]">Schedule Date and Time</h3>
      <p class="mb-6 text-center text-[#FFECD1]">To request service, please select your preferred appointment date and time below.</p>

      <!-- Date Selection Grid -->
      <div class="grid grid-cols-5 gap-4 mb-4">
        <!-- Date Item -->
        <% dates = [["Nov 5", "Tue"], ["Nov 6", "Wed"], ["Nov 7", "Thu"], ["Nov 8", "Fri"], ["Nov 9", "Sat"]] %>
        <% dates.each do |date, day| %>
          <div class="text-center">
            <p class="font-semibold text-[#FFECD1]"><%= date %></p>
            <p class="text-[#FFECD1] mb-2"><%= day %></p>
            <!-- Time Slots -->
            <button class="bg-[#15616D] text-[#FFECD1] w-full py-1 mb-2 rounded">Morning</button>
            <button class="bg-[#15616D] text-[#FFECD1] w-full py-1 rounded">Afternoon</button>
          </div>
        <% end %>
      </div>

      <!-- Navigation Buttons -->
      <div class="flex justify-between mt-6">
        <button class="bg-[#78290F] text-[#FFECD1] py-2 px-4 rounded" onclick="prevStep(3)">Back</button>
        <button class="bg-[#FF7D00] text-[#001524] py-2 px-4 rounded" onclick="nextStep(5)">Next</button>
      </div>
    </div>
  </div>
</div>
